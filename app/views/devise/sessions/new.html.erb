<div class='my-3' >
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field border-bottom" style='height: 50px;'>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control border-0 rounded-0 w-100 h-100' %>
    </div>

    <div class="field" style='height: 50px;'>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'form-control  border-0 rounded-0 w-100 h-100'  %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-primary p-1 rounded-lg text-white' %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
